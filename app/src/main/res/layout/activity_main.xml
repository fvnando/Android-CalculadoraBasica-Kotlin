<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:text="0"
            android:ems="10"
            android:id="@+id/tvDisplay"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:editable="false"
            android:textAlignment="textEnd" android:textSize="30sp" android:enabled="false"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:gravity="bottom|right"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <Button
                    android:text="sin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bsin" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="clickTrigonometricas"/>
            <Button
                    android:text="cos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bcos" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="clickTrigonometricas"/>
            <Button
                    android:text="tan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btan" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="clickTrigonometricas"/>
            <Button
                    android:text="("
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bParentesisAbierto" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text=")"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bParentesisCerrado" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b7" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b8" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b9" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="DEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bDEL" android:layout_weight="1"
                    android:background="@android:color/holo_red_dark" android:layout_margin="10dp"
                    android:onClick="borrarUltimo"/>
            <Button
                    android:text="AC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bAC" android:layout_weight="1"
                    android:background="@android:color/holo_red_dark" android:layout_margin="10dp"
                    android:onClick="borrarTodo"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b4" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b5" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b6" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bPor" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bEntre" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b1" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b2" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b3" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bMas" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bMenos" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b0" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>
            <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bPunto" android:layout_weight="1"
                    android:layout_margin="10dp" android:onClick="click"/>

            <Button
                    android:text="="
                    android:layout_width="240dp"
                    android:layout_height="wrap_content" android:id="@+id/bIgual" android:layout_weight="1"
                    android:layout_margin="10dp" android:background="@android:color/holo_green_dark"
                    android:onClick="calcular"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>